{{>header}}
{{>nav}}
<section class="container my-5">
    <h3>All Notes</h3>
    <div class="d-flex justify-content-between mb-4">
            <a href="/add" class="btn btn-primary">
                Add Note
            </a>
            <a href="/delAll" class="btn btn-danger">
                Delete All
            </a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
            <th>id</th>
            <th>name</th>
            <th>content</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#if hasData}}
            {{#each allUsers}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{content}}</td>
                <td>{{dueDate}}</td>
                <td>{{status}}</td>
                <td>
                    <a href="/single/{{id}}" class="btn btn-primary mx-3">Show</a>
                    <a href="/edit/{{id}}" class="btn btn-warning mx-3">Edit</a>
                    <a href="/del/{{id}}" class="btn btn-danger mx-3">Delete</a>
                </td>
            </tr>
            {{/each}}
            {{else}}
            <tr>
                <td colspan="5">No notes yet</td>
            </tr>
            {{/if}}
        </tbody>
    </table>
</section>
{{>footer}}