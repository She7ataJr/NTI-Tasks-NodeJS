<section class="container my-5">
    <h2>Edit Note</h2>
    <form action="/editLogic/{{note.id}}" >
       <div class="mb-3">
            <input name="title" class="form-control" placeholder="Title" value="{{note.title}}" required>
        </div>
        <div class="mb-3">
            <input name="content" class="form-control" placeholder="Content" value="{{note.content}}" required>
        </div>
        <div class="mb-3">
            <input name="dueDate" class="form-control" placeholder="date" type="date" value="{{note.dueDate}}" required>
        </div><div class="mb-3">
            <input name="status" class="form-control" placeholder="date" value="true" readonly>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary">Add</button>
        </div>
    </form>
</section>

