<section class="container my-5">
    <h2>Add Note</h2>
    <form action="/addLogic">
        <div class="mb-3">
            <input name="title" class="form-control" placeholder="Title" required>
        </div>
        <div class="mb-3">
            <input name="content" class="form-control" placeholder="Content" required>
        </div>
        <div class="mb-3">
            <input name="dueDate" class="form-control" placeholder="date" type="date" required>
        </div>
        <div class="mb-3">
            <input name="status" class="form-control" placeholder="date" value="false" readonly required>
        </div>

        <div class="mb-3">
            <button class="btn btn-primary">Add</button>
        </div>
    </form>
</section>

